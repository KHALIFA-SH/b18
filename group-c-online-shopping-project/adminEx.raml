#%RAML 1.0 Extension
extends: online-shopping.raml
usage: for admin users only

/admin_users:

  type:
    collection:
      resourcePathName: users
      resourcePath: user

  delete:
    displayName: Delete user
    responses:
      200:
        body:
          application/json:
            #type: userData
            example: {message: "User deleted successfully!"}
  is:
    - myLib.responseMessage
